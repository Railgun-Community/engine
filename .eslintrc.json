{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "airbnb-base",
    "prettier"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint",
    "es"
  ],
  "rules": {
    "import/prefer-default-export": "off",
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "js": "never",
        "jsx": "never",
        "ts": "never",
        "tsx": "never"
      }
    ],
    "no-shadow": "off",
    "no-return-await": "off",
    "@typescript-eslint/no-shadow": "warn",
    "no-useless-constructor": "off",
    "no-empty-function": "off",
    "no-unused-vars": "off",
    "no-bitwise": "off",
    "@typescript-eslint/no-unused-vars": "error",
    "no-promise-executor-return": "off",
    "no-continue": "off",
    "no-use-before-define": "off",
    "arrow-body-style": "off",
    "es/no-nullish-coalescing-operators": "error"
  },
  "ignorePatterns": [
    "dist/*"
  ],
  "settings": {
    "import/extensions": [
      ".js",
      ".ts",
      ".d.ts"
    ],
    "import/parsers": {
      "@typescript-eslint/parser": [
        ".ts",
        ".d.ts"
      ]
    },
    "import/resolver": {
      "node": {
        "extensions": [
          ".js",
          ".ts",
          ".d.ts"
        ]
      }
    }
  }
}
