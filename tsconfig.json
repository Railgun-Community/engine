{
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "resolveJsonModule": true,
    "sourceMap": true
  },
  "typeAcquisition": {
    "exclude": ["mocha"]
  },
  "include": [
    "src/*"
  ],
  "exclude": [
    "dist/*",
    "test/*"
  ]
}
