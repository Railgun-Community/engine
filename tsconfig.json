{
  "ts-node": {
    "files": true,
    "swc": true
  },
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "resolveJsonModule": true,
    "useUnknownInCatchVariables": false,
    "sourceMap": true,
    "typeRoots": ["src/global.d.ts", "./node_modules/@types"]
  },
  "typeAcquisition": {
    "exclude": ["mocha"]
  },
  "include": [
    "src/**/*.ts",
  ],
  "exclude": [
    "dist",
    "test"
  ]
}
